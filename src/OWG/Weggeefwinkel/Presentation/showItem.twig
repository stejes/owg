{% extends "skeleton.twig" %}

{% block title %}Edit item{% endblock %}

{% block content %}
    <div class="container">
        <div class="spacer"></div>
        <div class="itemfull col-md-9">

            <div class="thumbnail">
                <!--<img class="img-responsive" src="http://placehold.it/800x300" alt="">-->
                <div class="imgback">
                    <img class="img-responsive" src="src/OWG/Weggeefwinkel/Presentation/Img/{{ item.img }}" alt="">
                </div>
                <div class="spacer"></div>
                <div class="caption-full">
                    <h4 class="pull-right"><a href="#">{{ item.section.name }}</a></h4>
                    <h4>{{ item.title|capitalize }}</h4>
                    <p><strong>Omschrijving: </strong></p>
                    <p>{{ item.description }}</p>
                    <p class="alert alert-info">Bent u geinteresseerd in dit item, dan kan u via onderstaand formulier contact opnemen met de plaatser van de advertentie.</p>
                </div>

            </div>
            <form action="item.php?action=show&id={{ item.id }}" method="post">
                <div class="form-group">
                    <label for="title">Onderwerp:</label>
                    <input type="text" class="form-control" name="title" placeholder="titel" value="Betreft: {{ item.title }}"></input>
                </div>
                <div class="form-group">
                    <label for="text">Bericht:</label>
                    <textarea id="text" class="form-control" name="text" placeholder="schrijf hier uw bericht" rows="10" cols="50" ></textarea>
                </div>
                <button class="btn btn-default" type="submit" name="send" value="Verstuur">Verstuur</button>
            </form>
        </div>

    </div>





{% endblock %}