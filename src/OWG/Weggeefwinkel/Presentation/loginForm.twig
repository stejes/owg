{% extends "skeleton.twig" %}

{% block title %}Login{% endblock %}

{% block content %}
    <div class="container">
        <div class="spacer md-only"></div>

        <div class="col-md-6">


            <h4 class="reverseTitle">Login</h4>




            {% if error == "loginfailed" %}

                <div class="alert alert-danger">Onjuiste inloggegevens</div>
            {% endif %}

            <form action="login.php" method="post">
                <div class="form-group">
                    <label for="username">Gebruikersnaam</label>
                    <input type="text" class="form-control" name="username" placeholder="Gebruikersnaam">
                </div>
                <div class="form-group">
                    <label for="password">Wachtwoord</label>
                    <input type="password" class="form-control" name="password" placeholder="Wachtwoord">
                </div>

                <button type="submit" class="btn btn-success" name="login" value="Inloggen">Inloggen</button>
            </form>

            <div class="spacer"></div>
        </div>
        <div class="col-md-6">

            <h4 class="reverseTitle">Registreer</h4>



            {% if error == "userexists" %}
                <div class="alert alert-danger">Gebruikersnaam bezet</div>
            {% elseif error == "invalidinput" %}
                <div class="alert alert-danger">Foutieve input</div>
            {% elseif error == "unknown" %}
                <div class="alert alert-danger">Onbekende fout</div>
            {% endif %}

            {% if regerrors|length > 0 %}
                <div class="alert alert-danger">
                    <ul>
                        {% for error in regerrors %}
                            <li>{{ error }}</li>
                            {% endfor %}
                    </ul>
                </div>
            {% endif %}

            <form  action="login.php" method="post">
                <div class="form-group">
                    <label for="username">Gebruikersnaam</label>
                    <input type="text" class="form-control" name="username" placeholder="Gebruikersnaam" value="">
                </div>
                <div class="form-group">
                    <label for="city">Gemeente</label>
                    <!--<input type="text" name="email" placeholder="email">-->
                    <select name="city" class="form-control">

                        <option selected disabled>Woonplaats...</option>
                        {% for city in cityList %}
                            <option value="{{ city.id }}">
                                {{city.postcode}}, {{ city.name }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
                <div class="form-group">
                    <label for="password">Wachtwoord</label>
                    <input type="password" class="form-control" name="password" placeholder="Wachtwoord">
                </div>
                <div class="form-group">
                    <label for="password">Bevestig wachtwoord</label>
                    <input type="password" class="form-control" name="password2" placeholder="Bevestig wachtwoord">
                </div>
                <button class="btn btn-success" type="submit" name="register" value="Registreren">Registreren</button>
            </form>
        </div>




    </div>





{% endblock %}