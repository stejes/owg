{% extends "skeleton.twig" %}

{% block title %}Index{% endblock %}

{% block content %}


    <div class="jumbotron">
        <div class="container">
            <h1>Online weggeefwinkel</h1>
            <p>Deze site is een platform waarop u uw oude spullen kunt weggeven.</p>
            <p>Dit is een fictieve website in het kader van een opleiding. </p>
        </div>
    </div>

    <div class="container well">
        <h2>Start hier: </h2>
        <div class="col-md-4">



            <form action="item.php?action=add" method="post">
                <div class="form-group">
                    <button class="btn btn-success" type="submit" name="bla"> Plaats een advertentie</button>
                </div>
            </form>
            <form action="search.php?keywords=&search=Zoek" method="post">
                <div class="form-group">
                    <button class="btn btn-success" type="submit" name="search">Toon alle advertenties</button>
                </div>
            </form>
        </div>


        <div class="col-md-8 ">



            <form action="search.php" method="get">
                <div class="form-group">
                    <input type="text" name="keywords" placeholder="trefwoorden" class="form-control"></input>
                </div>
                <div class="form-group">
                    <select name="postcode" class="form-control">
                        <option selected disabled>Postcode...</option>
                        {% for city in cityList %}              
                            <option value="{{ city.id }}">{{ city.name }}, {{ city.postcode }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="form-group">
                    <select name="section"  class="form-control">
                        <option selected disabled>Sectie...</option>
                        {% for section in sectionList %}              
                            <option value="{{ section.id }}">{{ section.name }}</option>
                        {% endfor %}
                    </select>
                </div>
                <button class="btn btn-default" type="submit" name="search">Zoek</button>
            </form>
        </div>

    </div>





    <div class="container recent">
        <h2>Recente items:</h2>


            {% include 'itemRow.twig' %}

    </div>







{% endblock %}